        /*     font-size: 18px; /* Kích thước chữ */ */
        /*     color: #888; /* Màu chữ */ */
        /*     margin: 0; /* Đảm bảo không có khoảng cách ngoài */ */
        /* } */

    .image-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
    }

    .custom-file-upload {
        background: #5758BB;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        border: 1px solid #5758BB;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: background 0.3s;
    }

        .custom-file-upload i {
            font-size: 18px;
        }

        .custom-file-upload:hover {
            background: #fff;
            border: 1px solid #5758BB;
            color: #5758BB;
        }

    input[type="file"] {
        display: none;
    }

    .right-section {
        width:781px;
        height:690px;
        flex: 2;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

            .form-group input[readonly] {
                cursor: default;
                background-color: #f8f9fa;
            }

    .delete-button {
        background: #dc3545;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 16px;
        border: 1px solid #dc3545;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.3s;
    }

        .delete-button i {
            font-size: 18px;
        }

        .delete-button:hover {
            background: #fff;
            border: 1px solid #dc3545;
            color: #dc3545;
        }

    .button-group {
        display: flex;
        margin-left: auto;
        align-items: center;
        gap: 8px;
    }
</style>

<form method="post" action="/product/Add" enctype="multipart/form-data">
    <div class="container">
        <div class="left-section" style="width:390px">
            <h2>Product Image</h2>

            <div class="product-image" style="margin-bottom:10px">
                <img id="previewImage" src="" alt="" class="img-fluid"" />
                @* <p>No image selected</p> *@
            </div>


            <div class="image-actions">
                <label for="imageUpload" class="custom-file-upload">
                    <i class="fa-solid fa-image"></i> Choose Image
                </label>
                <input type="file" id="imageUpload" name="ImageFile" accept="image/*" onchange="previewImageEvent(event)" />
            </div>
        </div>
        <div class="right-section">
            <h2>General Information</h2>
            <div class="form-group">
                <label>Product Name</label>
                <input asp-for="ProductDetail.ProductName" required />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="ProductDetail.Price" type="number" min="1" required />
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input asp-for="ProductDetail.Quantity" type="number" min="1" required />
            </div>
            <div class="form-group">
                <label>Unit</label>
                <input asp-for="ProductDetail.Unit" />
            </div>
            <div class="form-group">
                <label>Product Description</label>
                <textarea asp-for="ProductDetail.Description" rows="5" required></textarea>
            </div>
            @* <h2>Product Management</h2> *@
            @* <div class="form-group"> *@
            @*     <label>Rating</label> *@
            @*     <input asp-for="ProductDetail.Rating" readonly /> *@
            @* </div> *@
            @* <div class="form-group"> *@
            @*     <label>Sold</label> *@
            @*     <input asp-for="ProductDetail.Sold" readonly /> *@
            @* </div> *@
            <div class="button-group">
                <button type="submit" class="save-button">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
            </div>
        </div>

    </div>

</form>

<script>
    function previewImageEvent(event) {
        var input = event.target;
        if (input.files && input.files.length > 0) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('previewImage');
                output.src = reader.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
